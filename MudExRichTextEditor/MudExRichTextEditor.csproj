<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Authors>Enrico Rossini</Authors>
    <Company>Enrico Rossini - PureSourceCode</Company>    
    <PackageIconUrl />
    <RepositoryUrl>https://github.com/erossini/BlazorQuillComponent</RepositoryUrl>
    <PackageTags>blazor, blazor-component, blazor-webassembly, blazor-server</PackageTags>
    <Description>Blazor Quill Component is a custom reusable control that allows us to easily consume Quill and place multiple instances of it on a single page in our Blazor application.</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageProjectUrl>https://www.puresourcecode.com/dotnet/blazor/create-a-blazor-component-for-quill/</PackageProjectUrl>
    <Version>1.0.1</Version>
    <AssemblyVersion>1.0.1.0</AssemblyVersion>
  </PropertyGroup>

  
  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BlazorJS" Version="2.1.4" />
    <!--<PackageReference Include="MudBlazor.Extensions" Version="1.7.77" />-->
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.16" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <!--<None Include="wwwroot\avatar.jpeg">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>-->
  </ItemGroup>

</Project>
